          <div class="d-flex flex-row bd-highlight mb-2 justify-content-lg-around flex-wrap">
            <%usersWithSecrets.forEach(function(u){%>
              <%u.secret.forEach(function(x){%>
                <div class="col-lg-auto mx-auto">
          
                  <blockquote class="blockquote blockquote-custom bg-white p-5 shadow rounded">
                      <div class="blockquote-custom-icon bg-info shadow-sm">
                        <i class="fa fa-quote-left text-white"></i>
                      </div>
                      <p class="mb-0 mt-2 font-italic">" <%= x %> "</p>
                      <footer class="blockquote-footer pt-4 mt-4 border-top">By
                      <cite title="Source Title">Anonymous</cite>
                      </footer>
                  </blockquote>
  
              </div>
              <%})%>
            <%})%>
          </div>
      </div>
  </section>
  
  
